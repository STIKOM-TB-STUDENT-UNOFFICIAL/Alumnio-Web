generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement()) @map("id_user")
  username        String           @unique
  password        String
  role            Int
  WorkHistory     WorkHistory[]
  UserInformation UserInformation?
  Portofolio      Portfolio[]
  OTP             OTP[]
  UserAnswer      UserAnswer[]

  @@map("users")
}

model UserInformation {
  id              Int     @id @default(autoincrement()) @map("id_user_information")
  userId          Int     @unique
  fullname        String
  gender          Gender  @default(Male) @map("gender")
  email           String  @default("")
  phone           String  @default("")
  address         String  @db.Text()
  bio             String  @default("")
  graduateOf      String  @map("graduate_of")
  majorId         Int     @map("major_id")
  linkedinUrl     String? @map("linkedin_url")
  curriculumVitae String? @default("") @map("curriculum_vitae")
  profilePict     String  @default("")

  major Major @relation(fields: [majorId], references: [id])
  user  User? @relation(fields: [userId], references: [id])

  @@map("user_informations")
}

model Major {
  id              Int               @id @default(autoincrement()) @map("id_major")
  majorName       String            @map("major_name")
  UserInformation UserInformation[]

  @@map("majors")
}

model WorkHistory {
  id        Int       @id @default(autoincrement()) @map("id_work_history")
  userId    Int       @map("user_id")
  title     String
  company   String
  startDate DateTime  @map("start_date")
  endDate   DateTime? @map("end_date")

  user User @relation(fields: [userId], references: [id])

  @@map("work_histories")
}

model Portfolio {
  id                  Int                   @id @default(autoincrement()) @map("id_portfolio")
  userId              Int                   @map("user_id")
  title               String
  description         String
  demoUrl             String?               @map("demo_url")
  sourceCode          String?               @map("source_code")
  user                User                  @relation(fields: [userId], references: [id])
  PortfolioStack      PortfolioStack[]
  PortfolioAttachment PortfolioAttachment[]

  @@map("portfolios")
}

model PortfolioAttachment {
  id          Int       @id @default(autoincrement()) @map("id_portfolio_attachment")
  portfolioId Int       @map("portfolio_id")
  imageUrl    String    @map("image_url")
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])

  @@map("portfolio_attachments")
}

model PortfolioStack {
  id          Int       @id @default(autoincrement()) @map("id_portfolio_stack")
  title       String
  portfolioId Int       @map("portfolio_id")
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])

  @@map("portfolio_stacks")
}

model OTP {
  id        Int      @id @default(autoincrement()) @map("id_otp")
  otp       String
  userId    Int      @map("user_id")
  expiredAt DateTime @map("expired_at")

  User User @relation(fields: [userId], references: [id])

  @@map("otp")
}

model JobOpportunity {
  id           Int      @id @default(autoincrement()) @map("id_job_oportunities")
  title        String
  company      String
  companyLogo  String   @map("company_logos")
  location     String
  postedDate   DateTime @map("posted_date")
  mailContact  String   @map("mail_contact")
  salary       String
  phoneContact String   @map("phone_contact")
  description  String   @db.Text

  @@map("job_opportunities")
}

model Survey {
  id         Int        @id @default(autoincrement()) @map("id_survey")
  questions  String
  surveyType SurveyType @map("survey_type")

  Answer     Answer[]
  UserAnswer UserAnswer[]

  @@map("surveys")
}

model Answer {
  id       Int    @id @default(autoincrement()) @map("id_question_answer")
  answer   String
  surveyId Int
  survey   Survey @relation(fields: [surveyId], references: [id])

  UserAnswer UserAnswer[]

  @@map("answers")
}

model UserAnswer {
  id       Int @id @default(autoincrement()) @map("id_user_answer")
  userId   Int @map("user_id")
  surveyId Int @map("survey_id")
  answerId Int

  User   User   @relation(fields: [userId], references: [id])
  Survey Survey @relation(fields: [surveyId], references: [id])
  Answer Answer @relation(fields: [answerId], references: [id])

  @@map("user_answers")
}

enum Gender {
  Male
  Female
}

enum SurveyType {
  ALUMNI
  GRADUATE_USER
}
